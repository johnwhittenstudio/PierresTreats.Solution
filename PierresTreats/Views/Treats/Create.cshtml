@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Treat
<div class="container">
  <br>
  <br>
  <div class="col-md-12">
    <div class=row>
      &nbsp;
      &nbsp;
      &nbsp;
      &nbsp;
      <div id="card" class="card border-dark mb-3" style="position: center; width: 100%; height: 50%">
        <div class="card-header">
          <center>
          <h1>Add a new treat</h1>
          </center>
        </div>
        &nbsp;  
        @using (Html.BeginForm())
        {
          <center>
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name, new { @required  = "required"})

            @Html.LabelFor(model => model.Amount)
            @Html.TextBoxFor(model => model.Amount, new { @required  = "required"})

            @Html.Label("Select flavor")
            @Html.DropDownList("FlavorId")

            <input id="button" class="btn btn-outline-dark my-sm-0" type="submit" value="Add new treat" class="btn btn-default" />
            </center>
        }
        &nbsp;
        <center><button id="button" type="button" class="btn btn-outline-dark my-sm-0" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Show all items", "Index")</button></center>
        &nbsp;
        &nbsp;
      </div>
    </div>
  </div>