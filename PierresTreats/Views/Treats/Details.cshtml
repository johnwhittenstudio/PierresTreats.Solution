@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Treat
<div class="container">
  <br>
  <br>
  <div class="col-md-12">
    <div class=row>
      &nbsp;
      &nbsp;
      &nbsp;
      &nbsp;
      <div id="card" class="card border-dark mb-3" style="position: center; width: 100%; height: 50%">
        <div class="card-header">
        <center><strong><h1 id="title" style="font-size:6vw">Treat Details</h1></strong></center>
        </div>
        &nbsp;
          <center><h4>@Html.DisplayNameFor(model => model.Name):</h4><h2> @Html.DisplayFor(model => model.Name)</h2>
          <center><h5>@Html.DisplayNameFor(model => model.Amount):</h5><h3> @Html.DisplayFor(model => model.Amount)</h3>
        &nbsp;
        @if (@Model.JoinEntities.Count == 0)
        {
        <center><h3>This treat does not belong to any flavors</h3></center>
        }
        else
        {
          <center><h4>Flavors the treat belongs to:</h4></center>
          @foreach (var join in Model.JoinEntities)
            {
              <center><h2>@join.Flavor.Type</h2></center>
              @using (Html.BeginForm("DeleteFlavor", "Treats"))
              {
                @Html.Hidden("joinId", @join.FlavorTreatId)
                <input type="submit" value="Delete from Flavor" id="button" class="btn btn-outline-dark my-sm-0" />
              }
            }
        }
      &nbsp;
      &nbsp;
      <center><button id="button" type="button" class="btn btn-outline-dark my-sm-0" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Add a Flavor", "AddFlavor", new { id = Model.TreatId })</button>
              <button id="button" type="button" class="btn btn-outline-dark my-sm-0" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Edit Treat", "Edit", new { id = Model.TreatId })</button>
              <button id="button" type="button" class="btn btn-outline-dark my-sm-0" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Delete Treat", "Delete", new { id = Model.TreatId })</button></center>
      &nbsp;
      &nbsp;
      <center><button id="button" type="button" class="btn btn-outline-dark my-sm-0" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Back to list", "Index")</button></center>
      &nbsp;
      &nbsp;
    </div>
  </div>
</div>