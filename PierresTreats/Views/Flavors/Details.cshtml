@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor;
<div class="container">
  <br>
  <br>
  <div class="col-md-12">
    <div class=row>
      &nbsp;
      &nbsp;
      &nbsp;
      &nbsp;
      <div id="card" class="card border-dark mb-3" style="position: center; width: 100%; height: 50%">
        <div class="card-header">
        <center><strong><h1 id="title" style="font-size:6vw">Flavor Details</h1></strong></center>
        </div>
        &nbsp;
          <center><h4>@Html.DisplayNameFor(model => model.Type):</h4><h2> @Html.DisplayFor(model => model.Type)</h2></center>
        &nbsp;
          @if(@Model.JoinEntities.Count == 0)
          {
            <center><h3>This flavor does not contain any treats</h3></center>
          }
          else
          {
            <center><h4>Treats the flavor contains:</h4></center>

            @foreach(var join in Model.JoinEntities)
            {
              <center><h2>@join.Treat.Name</h2></center>
            }

          }
      &nbsp;
      &nbsp;
      <center><button id="button" type="button" class="btn btn-outline-dark my-sm-0" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId })</button>
              <button id="button" type="button" class="btn btn-outline-dark my-sm-0" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</button></center>
      &nbsp;
      &nbsp;
      <center><button id="button" type="button" class="btn btn-outline-dark my-sm-0" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Back to Flavors", "Index")</button></center>
      &nbsp;
      &nbsp;
    </div>
  </div>
</div>