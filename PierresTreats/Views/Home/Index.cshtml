              <center><strong><h1 id="title" style="font-size:6vw">Pierre's Friandises Sucrées Confiserie!</h1></strong></center>
              <center><h4><em> A many-to-many user-authenticated database app</em></h4></center>
            </div>
            <br>
            &nbsp;
            &nbsp;
            <center><button id="button" type="button" class="btn btn-outline-dark my-sm-0" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Treats Menu", "Index", "Treats")</button>
                    <button id="button" type="button" class="btn btn-outline-dark my-sm-0" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Flavor Specialities", "Index", "Flavors")</button></center>
            &nbsp;
            <center><button id="button" type="button" class="btn btn-outline-dark my-sm-0" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Create User Account", "Index", "Account")</button></center>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


